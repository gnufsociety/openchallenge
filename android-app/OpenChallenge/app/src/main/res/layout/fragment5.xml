        <GridLayout
            android:id="@+id/user_grid_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="12dp"
            tools:columnCount="5"
            tools:rowCount="2">

            <android.support.v4.widget.Space
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_pro_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:src="@drawable/io1"
                app:civ_border_width="1dp" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_column="4"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:scaleType="centerCrop"
                android:src="@drawable/bronze" />

            <TextView
                android:id="@+id/user_number_gold"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="21"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_number_bronze"
                android:layout_column="4"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_number_silver"
                android:layout_column="3"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="120"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:scaleType="centerCrop"
                android:src="@drawable/gold" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_column="3"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:scaleType="centerCrop"
                android:src="@drawable/silver" />

        </GridLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/user_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_grid_profile"
            android:text="Ci scrivo barre a caso perchÃ¨ non so che dire"
            android:textSize="19sp" />

