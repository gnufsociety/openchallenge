<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:activity="com.gnufsociety.openchallenge.ConfigurationActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Configure your profile"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/username_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:hint="Username" />

    <EditText
        android:id="@+id/configure_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_first"
        android:hint="Status" />

    <Button
        android:id="@+id/done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_above="@+id/done_btn"
        android:layout_marginBottom="96dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/configure_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        app:civ_border_width="2dp"
        android:layout_below="@+id/configure_status"
        android:layout_centerHorizontal="true"
        android:onClick="chooseProPic"
        android:layout_marginTop="10dp" />


</RelativeLayout>
