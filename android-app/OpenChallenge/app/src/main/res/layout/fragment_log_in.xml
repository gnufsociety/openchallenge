<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gnufsociety.openchallenge.LogInFragment"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <EditText
        android:id="@+id/email_log"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Email or Username" />

    <EditText
        android:id="@+id/pass_log"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_below="@id/email_log"
        android:hint="Password" />
    <Button
        android:id="@+id/log_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/pass_log"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/link_register_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_btn"
        android:layout_centerHorizontal="true"
        android:text="@string/register_underlined"/>
    <ImageView
        android:paddingTop="20dp"
        android:id="@+id/google_log_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/google_log"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/link_register_log"/>
    <ImageView
        android:paddingTop="10dp"
        android:id="@+id/facebook_log_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook_log"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/google_log_btn"/>




</RelativeLayout>
